#!/usr/bin/env bash
# Configure Nginx to include custom HTTP response header

# Install Nginx
apt-get update
apt-get install -y nginx

# Get the hostname of the server
hostname=$(hostname)

# Configure Nginx with custom HTTP response header
echo "add_header X-Served-By $hostname;" >> /etc/nginx/sites-available/default

# Restart Nginx
service nginx restart

# Display success message
echo "Nginx configured with custom HTTP response header successfully."
